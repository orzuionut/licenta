{% extends 'layouts/master.njk' %}

{% block content %}

<div class="intro-text row">
	<div class="center-align">
		Instant. Realtime communication
	</div>
</div>

<div class="row register-panel">

	<div id="auth-img" class="col s12 m12 l6">
		<img src="img/register_panel.jpg">
	</div>

	<div id="auth-form" class="col s12 m12 l6">
		<div class="card-panel">

		<div class="row">
			<div class="form-header">
				Login
			</div> 
		</div>

		{{ form.open({action: 'SessionController.store'}) }}

		{{ csrfField }}

		<div class="row">
			<div class="input-field">
				{{ form.label('email', 'Enter your email address') }}
				{{ form.email('email', old('email')) }}
			</div>
		</div>

		<div class="row">
			<div class="input-field">
				{{ form.label('password', 'Enter your password') }}
				{{ form.password('password') }}
			</div>
		</div>

		{% if old('error') %}
			<div class="row">
				<div class="form-error input-field">
					<div> {{ old('error') | capitalize }} </div>
				</div>
			</div>
		{% endif %}

		<button class="btn waves-effect waves-light center-align" type="submit" name="action"> Login </button>

		{{ form.close() }}

		</div>
	</div>

</div>
  
{% endblock %}
