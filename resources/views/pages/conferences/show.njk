{% extends 'layouts/master.njk' %}

{% block content %}

	<input type="hidden" id="_user_id" value="{{ currentUser.id }}">
	<input type="hidden" id="_user_name" value="{{ currentUser.getFullName() }}">

	<div id="conference-container">

		<section id="videos-container" class="col-flex-3-4 card-panel"></section>

		<section id="conversation-container" class="col-flex-1-4">
			{% include "partials/_conversation_header_files.njk" %}

			<div class="conversation-files-wrapper card-panel">

				<div class="conversation-header">
					<div id="hide-files-header">
						<button id="hide-files-btn" class="btn">
							<i class="material-icons">keyboard_backspace</i>
						</button>
					</div>
				</div>

				<div id="files-container" class="conversation-files-body">

					{% for file in files %}
						{#<div class="message-emitter">{{ file.user_sender_id }}</div>#}
						<div class="single-file file-bubble file-bubble-resume" data-id="{{ file.id }}">
							{{ file.name }}
						</div>
					{% endfor %}

				</div>

				{% include "partials/_conversation_videocall_files_container.njk" %}

			</div>
		</section>

	</div>

	<script src="/js/app/conference.js"></script>
 
{% endblock %}
