{% extends 'layouts/master.njk' %}

{% block content %}

    {{ csrfField }}

    
    <div class="conversations-content">


        <div class="conversations-list card-panel">

            {% for conversation in conversations %}

                <div class="conversation-item row">

                  <div class="card-panel">

                     <div id="conversation-id-{{ conversation.id }}">{{ conversation.name }}</div>

                 </div>

                </div>

            {% endfor %}

        </div>

       
        <div class="conversation-wrapper card-panel">

              <div class="conversation-header">

                <div id="conversation-head"> 

                  <span id="conversation-name"> --Conversation name here-- </span>

                  <span id="conversation-status">
                     <i class="fa fa-circle" aria-hidden="true"></i>
                  </span>

                </div>

                <div id="conversation-buttons">

                  <div id="conversation-voice"> 
                    <i class="material-icons">call</i>
                  </div>

                  <div id="conversation-video">
                    <i class="material-icons">video_call</i>
                  </div>

                  <div id="conversation-profile">
                    <i class="material-icons">account_circle</i>
                  </div>

                </div>
              </div>


              <div class="conversation-body "></div>


              <div class="conversation-footer card-panel"> 

                  <textarea id="enter-message" type="text" placeholder="Enter your message.."></textarea>

                  <button id="submit-message" class="btn waves-effect waves-light center-align" type="submit" name="action">
                      <i class="material-icons">send</i>
                  </button>

               </div>

        </div>


    </div>

    <script> 

      let user_id = {{ currentUser.id }}; 
      let user_name = "{{ currentUser.getFullName() }}";
      let conversation_id = {{ conversations[0].id }};

    </script>

    <script src="/js/conversation/ajax.js"></script>
    <script src="/js/conversation/index.js"></script>


{% endblock %}