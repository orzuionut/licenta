{% extends 'layouts/master.njk' %}

{% block content %}

    <div id="mainDiv">

        <table border="1" width="100%">

            <tr id="videosContainer">
                <th>Local video</th>
                <th>Remote video</th>
            </tr>

            <tr>
                <td>
                    <video id="localVideo" autoplay muted></video>
                </td>
                <td>
                    <video id="remoteVideo" autoplay muted></video>
                </td>
            </tr>

        </table>

        <div id="videocall_form">
            <input type="file" id="dataChannelSend" name="files[]">

            <button id="send-button">Send</button>
        </div>

        <div id="files-container"></div>

    </div>

    <script src="/js/app/videocall.js"></script>

{% endblock %}