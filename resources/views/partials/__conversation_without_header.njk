<div class="conversation-wrapper {% block conversation_wrapper_class %}{% endblock %} card-panel">

    {% block header %}{% endblock %}

    <div id="conversation-messages-container">
        <div id="conversation-messages-body"></div>

        <div class="conversation-footer card-panel">
            <textarea id="enter-message" type="text" placeholder="Enter your message.."></textarea>

            <button id="submit-message" class="btn waves-effect waves-light center-align" type="submit" name="action">
                <i class="material-icons">send</i>
            </button>
        </div>
    </div>

</div>