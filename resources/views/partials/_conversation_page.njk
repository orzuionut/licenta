{% extends 'partials/__conversation_without_header.njk' %}

{% block conversation_wrapper_class %}
    col-flex-3-4
{% endblock %}

{% block header %}

    <div class="conversation-header">

        <div id="conversation-header-main">

            <div id="conversation-head">

            </div>

            <div id="conversation-buttons">

                <div id="conversation-voice">
                    <i class="material-icons">keyboard_voice</i>
                </div>

                <div id="conversation-video">
                    <i class="material-icons">video_call</i>
                </div>

                <div id="conversation-cinema">
                    <i class="material-icons">movie</i>
                </div>

                <div id="conversation-settings" data-activates='settings-dropdown'>
                    <i class="material-icons">settings</i>
                </div>

            </div>

        </div>

    </div>

    {% include "partials/conversations/settings-dropdown.njk" %}
    {% include "partials/conversations/delete-modal.njk" %}

{% endblock %}